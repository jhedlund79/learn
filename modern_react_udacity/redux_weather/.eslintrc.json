{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    /*"node": true,*/
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
  "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
  },
    "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 2],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
